<%= render 'layouts/sidebar' %>

<div class="col-md-9">
  <%= link_to @article.category.title, category_path(@article.category), class: 'article_category_link' %>
  <h1 class="page_title"><%= @article.title %></h1>
  <div class="row">
    <div class="article_content">
      <div class="article_image">
        <% if @article.image_present? %>
            <%= image_tag(@article.show_image) %>
        <% end %>
      </div>
      <p>
        <%= @article.content %>
      </p>
    </div>
  </div>
</div>