<h1 class="page-header">
  Создание статьи
</h1>

<%= form_for [:admin, @article] do |f| %>

    <%= render 'admin/layouts/error_messages', object: @article %>

    <div class="col-lg-10">

      <div class="form-group">
        <%= f.label :title, 'Заголовок' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :category_id, 'Категория' %>
        <%= f.select :category_id, categories_data_select_tag , {}, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :article_image, 'Изображение' %>(не обязательно)
        <%= f.file_field :article_image, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :content, 'Содержимое' %>
        <%= f.text_area :content, size: '50x20', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Создать', class: 'btn btn-large btn-primary' %>
      </div>

    </div>

<% end %>