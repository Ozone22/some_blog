<li class="list-group-item">
  <div class="user_list">
    <div class="col-lg-3">
      <%= link_to user.login, admin_user_path(user), class: 'login' %>
    </div>
    <div class="col-lg-2 col-lg-offset-1">
      <%= link_to 'изменить', edit_admin_user_path(user) %>
    </div>
    <% unless current_user?(user) %>
      <div class="col-lg-2">
        <%= link_to 'удалить', admin_user_path(user), method: :delete, data: { confirm: 'Вы уверены?' } %>
      </div>
    <% end %>
  </div>
</li>