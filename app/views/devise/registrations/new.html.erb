<div class="container">
  <div id="signupbox" class="mainbox col-md-8 col-md-offset-2 col-sm-9 col-sm-offset-2">
    <div class="panel panel-info" >

      <div class="panel-heading">
        <div class="panel-title">Регистрация</div>
        <div class="form_additional_links">
          <%= render 'devise/shared/links' %>
        </div>
      </div>

      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                     html: { class: 'form-horizontal'}) do |f| %>

          <%= render 'devise/shared/devise_error_messages' %>

          <div class="form-group">
            <%= f.label :email, class: 'col-md-3 control-label' %>
            <div class="col-md-9">
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :login, 'Логин', class: 'col-md-3 control-label' %>
            <div class="col-md-9">
              <%= f.text_field :login, autofocus: true, class: 'form-control', placeholder: 'Логин' %>
            </div>
          </div>


          <div class="form-group">
            <%= f.label :password, 'Пароль', class: 'col-md-3 control-label' %>
            <div class="col-md-9">
              <%= f.password_field :password, autocomplete: 'off', class: 'form-control',
                                   placeholder: "Пароль (#{@minimum_password_length} символов минимум)" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, 'Пароль (еще раз)', class: 'col-md-3 control-label' %>
            <div class="col-md-9">
              <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control',
                                   placeholder: 'Подтверждение пароля' %>
            </div>
          </div>

          <div class="form_input form-group">
            <div class="col-sm-12 controls">
              <%= f.submit 'Регистрация', class: 'btn btn-success' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
