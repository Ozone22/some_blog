<h2 class="page_title">Настройки профиля</h2>

<div class="row">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
             html: { method: :put, class: 'usr_edit_form' }) do |f| %>

  <%= render 'devise/shared/devise_error_messages' %>

  <div class="col-md-6 col-md-offset-3">

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :login, "Логин" %><br />
      <%= f.text_field :login, autofocus: true, class: 'form-control' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Ожидание подтверждения: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, 'Пароль' %><i>(Оставьте пустым, если не хотите его менять)</i><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control',
                           placeholder: "#{ @minimum_password_length } символов минимум" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Пароль (еще раз)' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, 'Текущии пароль' %> <i>(для подтверждения изменении)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Обновить", class: 'btn btn-success' %>
    </div>

  </div>

<% end %>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= link_to "Назад", :back, class: 'btn btn-primary' %>
  </div>
  <div class="col-md-4">
    <%= button_to "Удалить профиль", registration_path(resource_name),
                data: { confirm: "Вы уверены?" }, method: :delete, class: 'btn btn-danger edit-block' %>
  </div>
</div>
